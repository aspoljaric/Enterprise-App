@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/StudentsCtrl.js"></script>
}

<div ng-app="studentModule" id="body">
    <div ng-controller="studentCtrl">
        <h3>Students</h3>
        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Mobile Phone</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in studentData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.FirstName}}</td>
                    <td>{{items.LastName}}</td>
                    <td>{{items.DateOfBirth}}</td>
                    <td>{{items.Email}}</td>
                    <td>{{items.Telephone}}</td>
                    <td>{{items.MobilePhone}}</td>
                    <td>
                        <button ng-model="$scope.Student" ng-click="edit(studentData[$index])">Edit</button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>

                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Student.Id != '' ">
            <div>
                <h2>Update Student</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Student.Id" />
            </div>
            <div>
                <label for="firstname">First Name</label>
                <input type="text" data-ng-model="Student.FirstName" />
            </div>

            <div>
                <label for="lastname">Last Name</label>
                <input type="text" data-ng-model="Student.LastName" />
            </div>

            <div>
                <label for="dob">Date of Birth</label>
                <input type="text" data-ng-model="Student.DateOfBirth" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="text" data-ng-model="Student.Email" />
            </div>

            <div>
                <label for="telephone">Telephone</label>
                <input type="text" data-ng-model="Student.Telephone" />
            </div>

            <div>
                <label for="mobilephone">Mobile Phone</label>
                <input type="text" data-ng-model="Student.MobilePhone" />
            </div>

            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Student.Id != '' ">
            <div>
                <h3>Add</h3>
            </div>
            <div>
                <label for="firstname">First Name</label>
                <input type="text" data-ng-model="Student.FirstName" />
            </div>

            <div>
                <label for="lastname">Last Name</label>
                <input type="text" data-ng-model="Student.LastName" />
            </div>

            <div>
                <label for="dob">Date of Birth</label>
                <input type="text" data-ng-model="Student.DateOfBirth" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="text" data-ng-model="Student.Email" />
            </div>

            <div>
                <label for="telephone">Telephone</label>
                <input type="text" data-ng-model="Student.Telephone" />
            </div>

            <div>
                <label for="mobilephone">Mobile Phone</label>
                <input type="text" data-ng-model="Student.MobilePhone" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>